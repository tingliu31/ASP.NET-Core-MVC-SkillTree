@model IEnumerable<Homework_SkillTree.Models.Transaction>

@{
    ViewData["Title"] = "記帳列表";
    var index = 1;
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
            <th>備註</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var rowClass = item.TransactionType == TransactionType.Expense ? "table-secondary" : ""; // 灰底 class

            <tr class="@rowClass">
                <td>@index</td>
                <td>@GetDisplayName(item.TransactionType)</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Amount.ToString("N0")</td>
                <td>@item.Remark</td>
            </tr>
            index++;
        }
    </tbody>
</table>

@functions {
    private string GetDisplayName(Enum value)
    {
        var field = value.GetType().GetField(value.ToString());
        var attr = field.GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
                        .Cast<System.ComponentModel.DataAnnotations.DisplayAttribute>()
                        .FirstOrDefault();
        return attr?.Name ?? value.ToString();
    }
}
